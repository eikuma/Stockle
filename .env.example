# ================================================
# Stockle 環境変数設定
# ================================================

# ================================================
# アプリケーション基本設定
# ================================================
ENV=development
PORT=8080
FRONTEND_URL=http://localhost:3000

# ================================================
# データベース設定
# ================================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=stockle_user
DB_PASSWORD=secure_password
DB_NAME=stockle_db

# テスト用データベース
DB_TEST_NAME=stockle_test_db

# ================================================
# JWT認証設定
# ================================================
JWT_SECRET=your-jwt-secret-here-change-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# ================================================
# AI API設定
# ================================================
# Groq API (第1選択)
GROQ_API_KEY=your-groq-api-key-here

# Anthropic Claude API (第2選択/フォールバック)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# AI設定
AI_REQUEST_TIMEOUT=30s
AI_MAX_RETRIES=3

# ================================================
# OAuth設定 (Google)
# ================================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URL=http://localhost:3000/auth/callback/google

# ================================================
# Redis設定 (セッション・キャッシュ用)
# ================================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ================================================
# セキュリティ設定
# ================================================
# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m

# CORS設定
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# セッション設定
SESSION_SECRET=your-session-secret-key

# ================================================
# ログ設定
# ================================================
LOG_LEVEL=info
LOG_FORMAT=json
DB_LOG_QUERIES=false

# ================================================
# 監視・メトリクス設定
# ================================================
METRICS_ENABLED=true
METRICS_PORT=9090

# ================================================
# ファイルアップロード設定
# ================================================
UPLOAD_MAX_SIZE=10MB
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif

# ================================================
# 外部サービス設定
# ================================================
# Web スクレイピング用プロキシ (オプション)
PROXY_URL=
PROXY_USERNAME=
PROXY_PASSWORD=

# 画像最適化サービス (オプション)
IMAGE_OPTIMIZATION_ENABLED=false
IMAGE_OPTIMIZATION_API_KEY=

# ================================================
# 開発・デバッグ設定
# ================================================
DEBUG=false
VERBOSE_LOGGING=false
ENABLE_PROFILER=false

# ================================================
# 本番環境専用設定
# ================================================
# SSL/TLS設定
TLS_CERT_PATH=
TLS_KEY_PATH=

# セキュリティヘッダー
SECURITY_HEADERS_ENABLED=true

# Graceful Shutdown
SHUTDOWN_TIMEOUT=30s

# ================================================
# メール設定 (将来の機能拡張用)
# ================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password