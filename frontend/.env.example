# ================================================
# Stockle フロントエンド 環境変数設定
# ================================================

# ================================================
# Next.js 基本設定
# ================================================
NEXT_PUBLIC_APP_NAME=Stockle
NEXT_PUBLIC_APP_VERSION=1.0.0

# ================================================
# API設定
# ================================================
NEXT_PUBLIC_API_URL=http://localhost:8080/api/v1
NEXT_PUBLIC_WS_URL=ws://localhost:8080/ws

# ================================================
# NextAuth.js設定
# ================================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-change-this-in-production

# ================================================
# OAuth設定 (Google)
# ================================================
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ================================================
# UI/UX設定
# ================================================
# テーマ設定
NEXT_PUBLIC_DEFAULT_THEME=light
NEXT_PUBLIC_THEME_STORAGE_KEY=stockle-theme

# 言語設定
NEXT_PUBLIC_DEFAULT_LOCALE=ja
NEXT_PUBLIC_SUPPORTED_LOCALES=ja,en

# ================================================
# 機能フラグ
# ================================================
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=false
NEXT_PUBLIC_ENABLE_PWA=true

# ================================================
# パフォーマンス設定
# ================================================
# ページネーション
NEXT_PUBLIC_DEFAULT_PAGE_SIZE=20
NEXT_PUBLIC_MAX_PAGE_SIZE=100

# 画像最適化
NEXT_PUBLIC_IMAGE_OPTIMIZATION=true
NEXT_PUBLIC_MAX_IMAGE_SIZE=5MB

# ================================================
# Analytics設定 (オプション)
# ================================================
NEXT_PUBLIC_GA_TRACKING_ID=
NEXT_PUBLIC_HOTJAR_ID=

# ================================================
# エラー監視設定 (オプション)
# ================================================
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=

# ================================================
# CDN設定 (本番環境用)
# ================================================
NEXT_PUBLIC_CDN_URL=
NEXT_PUBLIC_STATIC_URL=

# ================================================
# セキュリティ設定
# ================================================
# CSP (Content Security Policy)
NEXT_PUBLIC_CSP_ENABLED=true

# CSRF設定
NEXT_PUBLIC_CSRF_TOKEN_HEADER=X-CSRF-Token

# ================================================
# 開発・デバッグ設定
# ================================================
# デバッグモード
NEXT_PUBLIC_DEBUG=false

# ログレベル
NEXT_PUBLIC_LOG_LEVEL=info

# API mock設定
NEXT_PUBLIC_USE_MOCK_API=false

# ================================================
# ソーシャル機能設定 (将来の機能拡張用)
# ================================================
NEXT_PUBLIC_ENABLE_SOCIAL_SHARING=true
NEXT_PUBLIC_TWITTER_HANDLE=@stockle_app

# ================================================
# PWA設定
# ================================================
NEXT_PUBLIC_PWA_NAME=Stockle
NEXT_PUBLIC_PWA_SHORT_NAME=Stockle
NEXT_PUBLIC_PWA_DESCRIPTION=記事保存・要約アプリケーション

# ================================================
# WebSocket設定
# ================================================
NEXT_PUBLIC_WS_RECONNECT_ATTEMPTS=5
NEXT_PUBLIC_WS_RECONNECT_INTERVAL=3000